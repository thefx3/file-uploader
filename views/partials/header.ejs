<header class="main-header">
    <div class="badges">
      <div class="logo">üåê</div>
      <% if (user) { %>
      <div class="badge admin"><%= user.role %></div>
      <% } %>
    </div>

    <form action="/update-role" method="POST">
      <input type="radio" id="admin" name="role" value="ADMIN" <% if (user && user.role === 'ADMIN') { %>checked<% } %>>
      <label for="admin">ADMIN</label>
      <input type="radio" id="user" name="role" value="USER" <% if (user && user.role === 'USER') { %>checked<% } else if (!user) { %>checked<% } %>>
      <label for="user">USER</label>
      <input type="radio" id="guest" name="role" value="GUEST" <% if (user && user.role === 'GUEST') { %>checked<% } %>>
      <label for="guest">GUEST</label>
      <input type="submit" value="Change">
    </form>

    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/community">Community</a>

      <% if (user) { %>
        <a href="/profile" class="profile-link">
          <%= (user.first_name || user.last_name || user.email || '?').trim().charAt(0).toUpperCase() %>
        </a>
        <a href="/logout" class="cta logout-link">Log out</a>
      <% } else { %>
        <a href="/login" class="cta login-link">Log in</a>
        <a href="/register" class="cta signup-link">Sign up</a>
      <% } %>
    </nav>

  </header>
