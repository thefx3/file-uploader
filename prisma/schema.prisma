generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  username    String    @unique
  email       String    @unique
  password    String    //hashed with the generePasword function
  role        Role      @default(USER)
  createdAt   DateTime  @default(now())
  files       File[]
}

model Session {
  id        String   @id
  sid       String   @unique
  data      String
  expiresAt DateTime
}

enum Role {
  ADMIN
  USER
  GUEST
}

model File {
  id         Int        @id @default(autoincrement())
  filename   String
  size       Int
  type       String
  url        String
  uploadedBy User       @relation(fields: [userId], references: [id])
  userId     Int
  addedAt    DateTime   @default(now())
}
